generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id              String          @id @default(uuid())
    firstName       String
    lastName        String
    email           String          @unique
    hashedPassword  String

    locations       Coordinates[]
}

model Coordinates {
    id          String  @id @default(uuid())
    longitude   Float
    latitude    Float

    user        User    @relation(fields: [userId], references: [id])
    userId      String
}

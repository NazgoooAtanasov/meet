generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id              String          @id @default(uuid())
    firstName       String
    lastName        String
    email           String          @unique
    hashedPassword  String

    locations       Coordinates[]
    createdEvents   Events[]
    events          UserEvents[]
}

model Coordinates {
    id          String  @id @default(uuid())
    longitude   Float
    latitude    Float

    user        User    @relation(fields: [userId], references: [id])
    userId      String
}

model Events {
    id          String  @id @default(uuid())
    title       String
    description String

    user        User    @relation(fields: [creatorId], references: [id])
    creatorId   String

    users       UserEvents[]
}

model UserEvents {
    id      String  @id @default(uuid())
    user   User    @relation(fields: [userId], references: [id])
    event  Events  @relation(fields: [eventId], references: [id])

    userId  String
    eventId String
}
